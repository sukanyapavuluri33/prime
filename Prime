#include<stdio.h>
void main(){
int a;
printf("enter a number");
scanf("%d",&a);
int res=prime(a,a/2);
if(res==1)
 printf("%d is a prime number",a);
 else 
 printf("%d is not a prime number",a);
 }

int prime(int a,int h){
   
 if(h==1)
  return 1;
  else if(a%h==0)
  return 0;
  else
  return prime(a,h-1);
 }
 
 
 



















